<h1> Albums </h1>

<p> Your Favorite Albums </p>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th> Name </th>
            <th> Released </th>
            <th> Released At </th>
            <th> Length </th>
            <th> Cover Art Url </th>
            <th> Kind </th>
            <th> Actions </th>
        </tr>
    </thead>
<tbody>
 <% @albums.each do |albums| %>
    <tr>
        <td> <%= albums.name %> </td>
        <td> <%= albums.released %> </td>
        <td> <%= albums.released_at %> </td>
        <td> <%= albums.length %> </td>
        <td> <%= albums.cover_art_url.truncate(50) %> </td>
        <td> <%= albums.kind %> </td>
        <td> 
        <%= link_to edit_album_path(albums.id) do %>
            <button type="button" class="btn btn-light"> Edit </button>
        <% end %> 

        <%= link_to album_path(albums.id), method: :delete, data: {confirm: "Are you sure about that?"} do %>
            <button type="button" class="btn btn-light"> Delete </button>
        <% end %>

        </td>
    </tr>
 <% end %>


</tbody>
</table>



<%= link_to new_album_path do %>
<button type="button" class="btn btn-light"> New Album</button>
<% end %>
