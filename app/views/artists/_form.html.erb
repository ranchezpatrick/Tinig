<%= form_with model: @artists do |f| %>
    
    <%= f.label :name %>
    <%= f.text_field :name %>

    <br/>

    <%= f.label :bio %>
    <%= f.text_area :bio %>


    <br/>

    <%= f.label :permalink %>
    <%= f.text_field :permalink %>

    <br/>

    <%= f.label :avatar_url %>
    <%= f.text_field :avatr_url %>

    <br/>

    <%= f.label :formed_at %>
    <%= f.date_field :formed_at, as: :date, value: f.object.try(:strftime,"%m/%d/%Y"), class: 'form-control' %> 
    
    <br/>

    <%= f.label :verified %>
    <%= f.check_box :verified %>

    <br/>

    <%= f.label :verified_at %>
    <%= f.date_field :verified_at, as: :date, value: f.object.try(:strftime,"%m/%d/%Y"), class: 'form-control' %> 
    
    <br/>

    <%= f.label :cover_photo_url %>
    <%= f.text_field :cover_photo_url %>

    <br/>

    <%= f.submit %>

    <%= link_to artists_path do %>
        Back to index
    <% end %>


<% end %>
     